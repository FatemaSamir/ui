                android:src="@drawable/me" />

            <TextView
                android:id="@+id/coment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/templ2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/img2"
                android:text="comment by :"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/mostafa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/templ2"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/coment2"
                android:text="Mostafa Elmorshdi"
                android:textColor="#A8000000"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/discri2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coment2"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/img2"
                android:text="Instructions 1.5,1.4 are clean and done ,good job"
                android:textColor="#A8000000"
                android:textSize="@dimen/_14ssp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
    </ScrollView>